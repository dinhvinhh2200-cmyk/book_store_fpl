<header class="main-header">
    <nav class="navbar container">
        <div class="logo">
            <a href="/">BOOK<span>STORE</span></a>
        </div>

        <div class="search-container">
            <form action="/" method="GET" class="search-form" id="searchForm">
                <select name="category" class="category-select"
                    onchange="document.getElementById('searchForm').submit()">
                    <option value="">Tất cả danh mục</option>
                    {{#each categories}}
                    <option value="{{this.id}}" {{#if this.isSelected}}selected{{/if}}>
                        {{this.name}}
                    </option>
                    {{/each}}
                </select>

                <input type="text" name="search" placeholder="Tìm tên sách..." value="{{keyword}}">
                <button type="submit"><i class="fas fa-search"></i> Tìm</button>
            </form>
        </div>

        <ul class="nav-links">
            <li><a href="/" class="nav-item">Sản phẩm</a></li>
            {{#if user}}
            <li style="color:white;" class="user-info">Chào, <strong>{{user.name}}</strong></li>
            <li><a href="/auth/logout" class="nav-btn logout">Đăng xuất</a></li>
            {{else}}
            <li><a href="/auth/login" class="nav-item">Đăng nhập</a></li>
            <li><a href="/auth/register" class="nav-btn signup">Đăng ký</a></li>
            {{/if}}
        </ul>
    </nav>
</header>