<link rel="stylesheet" href="/css/admin-categories.css">

<div class="categories-container mt-4">
    <h2 class="page-title">Quản lý danh mục</h2> {{#if errorMessage}}
    <div class="alert-error">{{errorMessage}}</div> {{/if}}

    <form action="/admin/categories/add" method="POST" class="add-category-form mb-4 form-flex">
        <input type="text" name="name" class="input-category" placeholder="Tên danh mục mới" required> <button
            type="submit" class="btn-add">Thêm</button>
    </form>

    <table class="table-categories">
        <thead>
            <tr>
                <th class="cat-id">ID</th>
                <th>Tên danh mục</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            {{#each categories}}
            <tr>
                <td class="cat-id">{{this.id}}</td>
                <td class="cat-name">{{this.name}}</td>
                <td>
                    <a href="/admin/categories/delete/{{this.id}}" class="btn-delete-cat"
                        onclick="return confirm('Xác nhận xóa danh mục?')">Xóa</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>