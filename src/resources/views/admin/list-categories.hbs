<div class="container mt-4">
    <h2>Quản lý danh mục</h2>

    {{#if errorMessage}}
        <div class="alert alert-danger">{{errorMessage}}</div>
    {{/if}}

    <form action="/admin/categories/add" method="POST" class="mb-4 d-flex">
        <input type="text" name="name" class="form-control me-2" placeholder="Tên danh mục mới" required>
        <button type="submit" class="btn btn-primary">Thêm</button>
    </form>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Tên danh mục</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            {{#each categories}}
            <tr>
                <td>{{this.id}}</td>
                <td>{{this.name}}</td>
                <td>
                    <a href="/admin/categories/delete/{{this.id}}" 
                       class="btn btn-danger btn-sm" 
                       onclick="return confirm('Xác nhận xóa danh mục?')">Xóa</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>